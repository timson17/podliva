<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material 3 -->
    <style name="Theme.Finnalyuvpn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor" tools:targetApi="o">?attr/colorPrimaryContainer</item>

        <!-- Window settings -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Finnalyuvpn.Button</item>

        <!-- Add other customizations below -->
    </style>

    <!-- Button style -->
    <style name="Widget.Finnalyuvpn.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- NoActionBar variant -->
    <style name="Theme.Finnalyuvpn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>